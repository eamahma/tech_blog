
<div id="testDiv2">
<div class="card single-post-padding">

    {{!-- If this is my post i can edit and delete it --}}
    {{#if currentUser}}
    <form class="pure-form">
        <fieldset class="pure-group">
            <input type="text" name="title" class="pure-input-1-2" id="post-title" value="{{post.title}}"/>
            <br><br>
            <textarea class="pure-input-1-2" name="body" id="post-body">{{post.body}}</textarea>
        </fieldset>
        <button type="submit" class="pure-button pure-input-1-2 pure-button-default" id="edit-btn">Update!</button>
    </form>
    {{!-- <button id="edit-btn">Edit</button> --}}
    <button id="delete-btn">Delete</button>
    <script src="/js/edit-delete-post.js"> </script>
    {{else}}
    <div class="title">
        <h4 id="post-title" class="post-header">{{post.title}} </h4>
        <h5>Posted by {{post.user.name}} on {{format_date post.date}}</h5>
    </div>
    <div class="container">
        <p id="post-body" class="post-text post-text-padding">{{post.body}}</p>
    </div>
    {{/if}}
</div>
{{!-- Add Comment --}}
<form class="pure-form pure-form-aligned">
    <fieldset>
        <div class="pure-control-group" id="comment-form ">
            <label for="comment-text">Leave A Comment!</label>
            <input class="padding-20" type="textarea" name="comment-text" id="comment-text"/>
                <button class="pure-button pure-button-default" id="post-comment-btn">Post!</button>
        </div>
    </fieldset>
</form>

{{!-- Handle the comments --}}
{{#each post.comments as |aComment|}}
{{> comment aComment}}
{{/each}}

<script src="/js/viewPost.js"></script>
{{#if currentUser}}
<script src="/js/edit-delete-post.js"> </script>
{{else}}
{{/if}}

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>